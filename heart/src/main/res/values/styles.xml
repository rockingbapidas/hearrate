<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_shape</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">300dip</item>
    </style>

    <style name="RippleStyle">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleDelayClick">true</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyle.White">
        <item name="mrl_rippleColor">@color/white80</item>
    </style>

    <style name="RippleStyle.Light">
        <item name="mrl_rippleColor">@color/light_color</item>
    </style>

</resources>
